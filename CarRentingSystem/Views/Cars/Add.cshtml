@model AddCarViewModel

@{
    ViewData["Title"] = "Add Car";
}

<form method="post">
  <div class="form-group">
    <label asp-for="Brand"></label>
    <input asp-for="Brand" class="form-control" placeholder="BMW, Audi, etc...">
  </div>
  <div class="form-group">
    <label asp-for="Model"></label>
    <input asp-for="Model" class="form-control" placeholder="F10, A8, etc...">
  </div>
  <div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control" placeholder="Some details..."></textarea>
  </div>
  <div class="form-group">
    <label asp-for="ImageUrl"></label>
    <input asp-for="ImageUrl" class="form-control" placeholder="The image URL of the car...">
  </div>
  <div class="form-group">
    <label asp-for="Year"></label>
    <input asp-for="Year" class="form-control" placeholder=@DateTime.UtcNow.Year>
  </div>



  <div class="form-group">
    <label for="exampleFormControlSelect1">Example select</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect2">Example multiple select</label>
    <select multiple class="form-control" id="exampleFormControlSelect2">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Example textarea</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
</form>